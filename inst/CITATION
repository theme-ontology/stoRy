citHeader("To cite the 'stoRy' package in publications use:")

year <- sub("-.*", "", meta$Date)
version <- paste("R package version", meta$Version)

citEntry(
  entry = "Manual",
  title = "{stoRy}: Download, Explore, and Analyze Literary Theme Ontology Data",
  author = personList(
    as.person("Paul Sheridan"),
    as.person("Oshan Modi"),
    as.person("Mikael Onsjö")
  ),
  year = year,
  note = version,
  textVersion = paste(
    "Paul Sheridan, Oshan Modi, Mikael Onsjö (",
    year,
    "). stoRy: Download, Explore, and Analyze Literary Theme Ontology Data. ",
    version,
    ".",
    sep = ""
  )
)
